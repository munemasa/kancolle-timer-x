{
  "manifest_version": 2,
  "name": "KanColle Timer X",
  "version": "1.4",
  "applications": {
    "gecko": {
      "id": "kancolletimerx@miku39.jp",
      "strict_min_version": "57.0"
    }
  },
  "description": "艦これタイマーX",
  "homepage_url": "http://miku39.jp/blog/wp/?page_id=1705",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "*://*/kcsapi/*",
    "<all_urls>",
    "downloads",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "notifications",
    "tabs",
    "activeTab",
    "webNavigation"
  ],
  "options_ui": {
    "page": "options/options.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "browser_style": true,
    "default_title": "艦これタイマーX",
    "default_popup": "popup/popup.html"
  },
  "sidebar_action": {
    "default_title": "艦これタイマーX",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.dmm.com/netgame/social/-/gadgets/=/app_id=854854*"
      ],
      "js": [
        "content_scripts/measure.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://osapi.dmm.com/gadgets/*"
      ],
      "js": [
        "content_scripts/measure.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "libs/utils.js",
      "bg/background.js"
    ]
  },
  "page_action": {
    "default_icon": "img/screenshot.png",
    "browser_style": true
  }
}